<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_labels</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/padding_horizontal</item>
        <item name="android:paddingStart">@dimen/padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/padding_horizontal</item>
        <item name="android:elevation">@dimen/elevation_size</item>
        <item name="android:textSize">@dimen/label_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
